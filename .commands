function password() {
  chars='@#$%&_+='
  { </dev/urandom LC_ALL=C grep -ao '[A-Za-z0-9]' \
          | head -n$((RANDOM % 8 + 6))
      echo ${chars:$((RANDOM % ${#chars})):1}   # Random special char.
  } \
      | sort -r \
      | tr -d '\n' \
      | pbcopy \
      && echo `pbpaste`
}

